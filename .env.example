# Threat Intelligence API Keys
ABUSEIPDB_KEY=your_abuseipdb_api_key
VIRUSTOTAL_KEY=your_virustotal_api_key
OTX_API_KEY=your_alienvault_otx_key
GREYNOISE_API_KEY=your_greynoise_key
SHODAN_API_KEY=your_shodan_key
MALTIVERSE_API_KEY=your_maltiverse_key
MISP_URL=your_misp_instance_url
MISP_KEY=your_misp_api_key

# Alert Integration Settings
SLACK_TOKEN=your_slack_bot_token
TELEGRAM_TOKEN=your_telegram_bot_token
TELEGRAM_CHAT_ID=your_telegram_chat_id

# Email Alert Settings
SMTP_SERVER=smtp.gmail.com
SMTP_PORT=587
SMTP_USERNAME=your_email@gmail.com
SMTP_PASSWORD=your_app_specific_password
ALERT_RECIPIENTS=security@company.com,admin@company.com

# Alert Thresholds and Scoring
CRITICAL_ALERT_THRESHOLD=80
HIGH_ALERT_THRESHOLD=60
MEDIUM_ALERT_THRESHOLD=40
LOW_ALERT_THRESHOLD=20

# Threat Score Weights (0-100)
VIRUSTOTAL_WEIGHT=30
ABUSEIPDB_WEIGHT=25
OTX_WEIGHT=20
GREYNOISE_WEIGHT=15
SHODAN_WEIGHT=10

# Alert Configuration
ENABLE_SLACK_ALERTS=true
ENABLE_TELEGRAM_ALERTS=true
ENABLE_EMAIL_ALERTS=true
ALERT_COOLDOWN_MINUTES=15
MAX_ALERTS_PER_HOUR=10

# Threat Intelligence Settings
THREAT_CACHE_MINUTES=60
MIN_CONFIDENCE_SCORE=50
ENABLE_AUTO_BLOCKING=false
MAX_IP_CACHE_SIZE=1000

# Threat Correlation Settings
CORRELATION_WINDOW_HOURS=24
MIN_CLUSTER_SIZE=2
CLUSTER_SIMILARITY_THRESHOLD=0.3
MAX_GRAPH_SIZE=10000
ENABLE_PATTERN_LEARNING=true

# Automated Response Settings
ENABLE_AUTO_RESPONSE=false
BLOCK_THRESHOLD_SCORE=80
MAX_AUTO_BLOCKS_PER_HOUR=20
BLOCK_DURATION_HOURS=24
WHITELISTED_IPS=127.0.0.1,192.168.1.1
BLACKLISTED_IPS=

# MISP Integration
MISP_PUBLISH_EVENTS=true
MISP_SYNC_INTERVAL_MINUTES=30
MISP_EVENT_DISTRIBUTION=0
MISP_THREAT_LEVEL=2
MISP_ANALYSIS_LEVEL=1
